<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/snackBar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SnackBar.SnackBar"
    android:background="@drawable/background_toast">

    <com.kevadiyakrunalk.snackbar.InfoView
        android:id="@+id/infoView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|left"
        android:gravity="center_vertical|left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/info_toast">

        <TextView
            android:id="@id/snackMessage"
            style="@style/SnackBar.Message.type"
            tools:text="Sample message"/>

        <TextView
            android:id="@id/snackButton"
            style="@style/SnackBar.Button"
            tools:text="Action"/>
    </LinearLayout>
</LinearLayout>
